#! /bin/sh

LIST=$(miyka list)

if test -n "$LIST"
then NAMES=$(printf "%s\n%s\n%s\n%s" "$LIST" "*create*" "*edit*" "*copy*")
else NAMES="*create*
"
fi

NAME=$(printf "%s" "$NAMES" | fzf --prompt "run> ")

if test -z "$NAME"
then echo Cancelled ; exit 1
fi

case "$NAME" in
	"*create*")
		my-session-create --new "$@"
		"$0" "$@"
		;;
	"*edit*")
		NAME=$(printf "%s" "$NAMES" | fzf --prompt "edit> ")
		miyka edit "$NAME"
		"$0" "$@"
		;;
	"*copy*")
		my-session-create --copy "$@"
		"$0" "$@"
		;;
	*)
		exec my-session-run "$NAME" "$@"
		;;
esac
